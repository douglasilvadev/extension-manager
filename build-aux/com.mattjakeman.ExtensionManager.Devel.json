{
    "id" : "com.mattjakeman.ExtensionManager.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "extension-manager",
    "separate-locales" : false,
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gnome.Shell.Extensions",
        "--talk-name=org.gnome.SessionManager"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name" : "blueprint-compiler",
            "builddir" : true,
            "buildsystem" : "meson",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit" : "66b43c36cf1017c878762007373964a096b3d2a5",
                    "tag" : "v0.12.0"
                }
            ]
        },
        {
            "name" : "libbacktrace",
            "builddir" : true,
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/ianlancetaylor/libbacktrace.git",
                    "branch" : "master"
                }
            ]
        },
        {
            "name" : "text-engine",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/mjakeman/text-engine.git",
                    "commit" : "379437b2b589a9414985dec9136b7b48bae76f9e",
                    "tag" : "v0.1.0"
                }
            ]
        },
        {
            "name" : "extension-manager",
            "builddir" : true,
            "buildsystem" : "meson",
            "run-tests" : true,
            "config-opts" : [
                "-Ddevelopment=true",
                "-Dpackage=Flatpak",
                "-Ddistributor=mjakeman",
                "-Dofficial=true"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../"
                }
            ]
        }
    ]
}
